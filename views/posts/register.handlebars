<div>
  <p class='logo' style="text-align: left;">logo</p>
</div>
<div class="mainbody middle">
  <h3>{{warn}}</h3>

  <form class="form-box back" action="/api/users/signUp" method="POST" id="register-form">
    <div>
      <h1>Register</h1>
    </div>
    <div>

      <input class="input-normal-r" type="text" name="Username" placeholder="UserAccount" id="register-un"/>
      <input class="input-normal-r" type="password" name="Password" placeholder="PassWord" id="register-pw"/>
      <input class="input-normal-r" type="email" name="Mail" placeholder="Email" id="register-em"/>
      <input class="input-normal-r" type="text" name="Phone" placeholder="Telphone" id="register-te"/>

      <button class="btn-submit" type="submit" >
        Register
      </button>
    </div>
    <div>
      <p style="margin-top: 18px">Have a account ? You can</p>
      <p>Click here to <a id="login" href="/api/users/login">Log in</a></p>
    </div>
  </form>
</div>

